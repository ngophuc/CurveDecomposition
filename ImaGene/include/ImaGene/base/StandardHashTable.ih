// ----------------------- Access services ------------------------------



/**
 * Maps the specified key to the specified value in the StandardHashTable.
 *
 * @param key a key.
 * @param object a pointer to an object.
 */
template <class Value>
void
ImaGene::StandardHashTable<Value>::put( Key key, const Value & value )
{
  uint i = hash( key );
  uint j = m_first[ i ];
  uint last = m_k;
  while ( j != m_k && ( m_entries[ j ].key != key ) )
    {
      last = j;
      j = m_entries[ j ].next;
    }
  if ( j == m_k )
    {
      ASSERT_StandardHashTable( m_free != m_k );
      j = m_free;
      m_free = m_entries[ j ].next;
      m_entries[ j ].key = key;
      m_entries[ j ].value = value;
      m_entries[ j ].next = m_k;
      if ( last == m_k ) m_first[ i ] = j;
      else               m_entries[ last ].next = j;
      ++m_size;
    }
  else
    {
      m_entries[ j ].value = value;
    }
}


/**
 * Accessor. Tells if a key is present in the hashtable.
 *
 * @param key a key.
 * @return 'true' if the key was present, 'false' otherwise.
 */
template <class Value>
bool
ImaGene::StandardHashTable<Value>::contains( Key key ) const
{
  uint i = hash( key );
  uint j = m_first[ i ];
  while ( ( j != m_k ) && ( m_entries[ j ].key != key ) )
    j = m_entries[ j ].next;
  return j != m_k;
}


/**
 * Accessor. Returns the value associated with a given key. If the
 * key is not present, returns the default value.
 *
 * @param key a key.
 * @return the value to which the specified key is mapped in.
 */
template <class Value>
const Value &
ImaGene::StandardHashTable<Value>::get( Key key ) const
{
  uint i = hash( key );
  uint j = m_first[ i ];
  while ( ( j != m_k ) && ( m_entries[ j ].key != key ) )
    j = m_entries[ j ].next;
  return ( j != m_k ) ? m_entries[ j ].value : m_default;
}


/**
 * Accessor. Returns the value associated with a given key. If the
 * key is not present, returns 'false', otherwise returns 'true'.
 *
 * @param key a key.
 * @param value (returns) the value associated with the key.
 * @return 'true' if the key was present, 'false' otherwise.
 */
template <class Value>
bool 
ImaGene::StandardHashTable<Value>::get( Key key, Value & value ) const
{
  uint i = hash( key );
  uint j = m_first[ i ];
  while ( ( j != m_k ) && ( m_entries[ j ].key != key ) )
    j = m_entries[ j ].next;
  if ( j != m_k ) 
    {
      value = m_entries[ j ].value;
      return true;
    }
  else
    return false;
}


/**
 * Deletes the given key [key] from the StandardHashTable.
 *
 * @param key a key.
 */
template <class Value>
void
ImaGene::StandardHashTable<Value>::erase( Key key )
{
  uint i = hash( key );
  uint j = m_first[ i ];
  uint last = m_k;
  while ( j != m_k && ( m_entries[ j ].key != key ) )
    {
      last = j;
      j = m_entries[ j ].next;
    }
  if ( j != m_k )
    {
      if ( last == m_k ) m_first[ i ] = m_entries[ j ].next;
      else             m_entries[ last ].next = m_entries[ j ].next;
      m_entries[ j ].next = m_free;
      m_free = j;
      --m_size;
    }
}


/**
 * Removes the key and its corresponding value from the StandardHashTable.
 *
 * @param key a key.
 * @return the corresponding object.
 */
template <class Value>
Value
ImaGene::StandardHashTable<Value>::remove( Key key )
{
  uint i = hash( key );
  uint j = m_first[ i ];
  uint last = m_k;
  while ( j != m_k && ( m_entries[ j ].key != key ) )
    {
      last = j;
      j = m_entries[ j ].next;
    }
  if ( j != m_k )
    {
      if ( last == m_k ) m_first[ i ] = m_entries[ j ].next;
      else             m_entries[ last ].next = m_entries[ j ].next;
      m_entries[ j ].next = m_free;
      m_free = j;
      --m_size;
      return m_entries[ j ].value;
    }
  else
    return m_default;
}


/**
 * Read-only accessor. Returns the value associated with a given
 * key. If the key is not present, returns the default value.
 *
 * @param key a key.
 * @return the value to which the specified key is mapped in.
 */
template <class Value>
const Value & 
ImaGene::StandardHashTable<Value>::operator[]( Key key ) const
{
  return get( key );
}


/**
 * Read-write accessor. Returns a reference to the value
 * associated with a given key. If the key is not present, returns
 * the default value.
 *
 * @param key a key.
 * @return the value to which the specified key is mapped in.
 */
template <class Value>
Value & 
ImaGene::StandardHashTable<Value>::operator[]( Key key )
{
  uint i = hash( key );
  uint j = m_first[ i ];
  uint last = m_k;
  while ( j != m_k && ( m_entries[ j ].key != key ) )
    {
      last = j;
      j = m_entries[ j ].next;
    }
  if ( j == m_k )
    {
      ASSERT_StandardHashTable( m_free != m_k );
      j = m_free;
      m_free = m_entries[ j ].next;
      m_entries[ j ].key = key;
      m_entries[ j ].next = m_k;
      if ( last == m_k ) m_first[ i ] = j;
      else               m_entries[ last ].next = j;
      ++m_size;
    }
  return m_entries[ j ].value;
}



