/**
 * Destructor. 
 */
template <class Value>
ImaGene::StandardHashTable<Value>::~StandardHashTable()
{
  clear();
}


/**
 * Constructor.
 * The object is empty.
 */
template <class Value>
ImaGene::StandardHashTable<Value>::StandardHashTable()
  : m_entries( 0 ), m_k( 0 ), m_first( 0 ), m_n( 0 ), m_size( 0 )
{
}


/**
 * Initializes the hash table for a given set of keys [m] and for
 * an approximate number of values [n].
 *
 * @param m no key can be bigger than this number.
 * @param n the number of lists in the hashtable.
 * @param k the maximum number of cells in the hashtable (same order as [n]).
 */
template <class Value>
void
ImaGene::StandardHashTable<Value>::init( uint m, uint n, uint k )
{
  clear();
  m_p = Mathutils::greaterPrime( (unsigned long long) m );
  std::cout << "m=" << m << " n=" << n << " p=" << m_p << std::endl;
  do
    m_a = Mathutils::random( m_p );
  while ( m_a == 0 );
  
  m_b = Mathutils::random( m_p );
  std::cout << "a=" << m_a << " b=" << m_b << std::endl;

  m_n = n;
  m_k = k;
  m_entries = new StandardHashTableEntry[ k ];
  m_first = new uint[ n ];
  ASSERT_StandardHashTable( ( m_entries != 0 ) && ( m_first != 0 ) );
  for ( uint i = 0; i < m_n; ++i )
    m_first[ i ] = m_k;
  for ( uint i = 0; i < m_k; ++i )
    m_entries[ i ].next = i + 1;
  m_free = 0;
}



/**
 * Clears the data structure.
 */
template <class Value>
void
ImaGene::StandardHashTable<Value>::clear()
{
  if ( m_entries != 0 )
    {
      delete[] m_entries;
      m_entries = 0;
    }
  if ( m_first != 0 )
    {
      delete[] m_first;
      m_first = 0;
    }
  m_k = 0;
  m_n = 0;
  m_size = 0;
}


/**
 * @return the number of entries in the hashtable.
 */
template <class Value>
uint
ImaGene::StandardHashTable<Value>::size() const
{
  return m_size;
}




